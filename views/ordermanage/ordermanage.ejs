<%- include ../common/htmlneck.ejs %>

<!-- 写入自己的div页面-->
<div id="sample_2_wrapper" class="dataTables_wrapper no-footer margin-top-5">
    <div class="row">
        <div class="col-md-6 col-sm-6">
            <div class="btn-group btn-group-solid">
                <button type="button" id="but-OrderAdd" class="btn btn-sm blue btn-outline sbold uppercase" disabled>
                    <i class="fa fa-plus"></i> 新增
                </button>
                <button type="button" id="but-OrderEdit" class="btn btn-sm blue btn-outline sbold uppercase" disabled>
                    <i class="fa fa-edit"></i> 编辑
                </button>
                <button type="button" id="but-OrderDel" class="btn btn-sm blue btn-outline sbold uppercase">
                    <i class="icon-trash"></i> 删除
                </button>
            </div>
        </div>
    </div>
    <table class="table table-scrollable table-bordered table-hover" id="order-dts">
    </table>
</div>

<!-- 新增编辑-->
<div id="div_add_order" hidden>
    <div class="portlet portlet light bordered">
        <div class="portlet-body form">
            <form id="form_order_add_edit" role="form">
                <div class="form-body">
                    <div class="form-group">
                        <label>用户名<span class="required" aria-required="true"> * </span></label>
                        <input type="text" class="form-control" placeholder="" name="orderName">
                    </div>
                    <div class="form-group">
                        <label>密码<span class="required" aria-required="true"> * </span></label>
                        <input type="password" class="form-control" placeholder="" name="orderPassword">
                    </div>
                    <div class="form-group">
                        <label>确认密码<span class="required" aria-required="true"> * </span></label>
                        <input type="password" class="form-control" placeholder="">
                    </div>
                    <div class="form-group">
                        <label>全名</label>
                        <input type="text" class="form-control" placeholder="" name="orderFullName">
                    </div>
                    <div class="form-group">
                        <label>年龄</label>
                        <input type="text" class="form-control" placeholder="" name="orderAge">
                    </div>
                    <div class="form-group">
                        <label>性别</label>
                        <div class="mt-radio-inline">
                            <label class="mt-radio">
                                <input type="radio" name="orderGender" value="0" checked> 男
                                <span></span>
                            </label>
                            <label class="mt-radio">
                                <input type="radio" name="orderGender" value="1"> 女
                                <span></span>
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>邮箱</label>
                        <input type="text" class="form-control" placeholder="" name="orderEmail">
                    </div>
                    <div class="form-group">
                        <label>地址</label>
                        <input type="text" class="form-control" placeholder="" name="orderAddress">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

