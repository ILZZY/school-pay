<!-- 写入自己的div页面-->
<div id="sample_2_wrapper" class="dataTables_wrapper no-footer margin-top-5">
    <div class="row">
        <div class="col-md-6 col-sm-6">
            <div class="btn-group btn-group-solid">
                <button type="button" id="but-RoleAdd" class="btn btn-sm blue btn-outline sbold uppercase">
                    <i class="fa fa-plus"></i> 新增
                </button>
                <button type="button" id="but-RoleEdit" class="btn btn-sm blue btn-outline sbold uppercase">
                    <i class="fa fa-edit"></i> 编辑
                </button>
                <button type="button" id="but-RoleDel" class="btn btn-sm blue btn-outline sbold uppercase">
                    <i class="icon-trash"></i> 删除
                </button>
            </div>
        </div>
    </div>
    <table class="table table-scrollable table-bordered table-hover" id="role-dts">
    </table>
</div>

<!-- 新增编辑-->
<div id="div_add_role" hidden>
    <div class="portlet portlet light bordered">
        <div class="portlet-body form">
            <form id="form_role_add_edit" role="form">
                <div class="form-body">
                    <div class="form-group">
                        <label>角色名称<span class="required" aria-required="true"> * </span></label>
                        <input type="text" class="form-control" placeholder="" name="roleName">
                    </div>
                    <div class="form-group">
                        <label>描述<span class="required" aria-required="true"> * </span></label>
                        <input type="text" class="form-control" placeholder="" name="roleDesc">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

