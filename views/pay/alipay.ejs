<!-- 写入自己的div页面-->
<div id="dv-pay" class="portlet box green">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i> 付款 </div>
    </div>
    <div class="portlet-body form" style="display: block;">
        <!-- BEGIN FORM-->
        <form id="frm-pay" class="form-horizontal">
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label">商户订单号</label>
                    <div class="col-md-4">
                        <input type="text" class="form-control input-circle" name="out_trade_no" value="" placeholder="请输入商户订单号">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">下单用户</label>
                    <div class="col-md-4">
                        <input type="text" class="form-control input-circle" name="orderUserName" value="" placeholder="请输入商户订单号">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">订单主题</label>
                    <div class="col-md-4">
                        <input type="text" class="form-control input-circle" name="subject" value="测试名称" placeholder="请输入订单名称">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">付款金额</label>
                    <div class="col-md-4">
                        <input type="text" class="form-control input-circle" name="total_amount" value="0.01" placeholder="请输入付款金额">
                    </div>
                </div>
                <div class="form-group last">
                    <label class="col-md-3 control-label">商品描述</label>
                    <div class="col-md-4">
                        <input type="text" class="form-control input-circle" name="body" value="茕孑测试" placeholder="请输入商品描述">
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="pull-right">
                        <button id="btn-pay" type="button" class="btn btn-circle green">支付</button>
                        <button type="button" class="btn btn-circle grey-salsa btn-outline">重置</button>
                    </div>
                </div>
            </div>
        </form>
        <!-- END FORM-->
    </div>
</div>
<script>
    var NodeParam = '<%- (str_dataParam) %>';
</script>

